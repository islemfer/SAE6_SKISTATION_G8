pipeline {
environment { 
        registry = "islemferchichi/projetdevops" 
        registryCredential = 'dockerhub' 
        dockerImage = '' 
    }

    agent any
    
    stages {

        stage('Nettoyage et compilation Maven') {
            steps {
                // Cette Ã©tape va nettoyer et compiler le projet avec Maven
                sh 'mvn clean compile'
            }
        }

       

        stage('Mockito & JUnit test') {
           steps {
               script {
                sh 'mvn test'
             }
                
            }
        }
        stage('fichier jar') {
                       steps {
                          script {
                                  sh 'mvn install'
                                 }
                            }
                      }

        stage('SonarQube analyse') {
             steps {
               script {
            withSonarQubeEnv(installationName: 'sq1') {
                 sh 'mvn sonar:sonar'
             }
        }
                
           }
       }

         stage('Nexus') {
             steps {
                script {
                 sh 'mvn deploy'
                
              }
                
             }
        }
         stage('Docker Image') { 
            steps { 
                script { 
                    dockerImage = docker.build registry + ":ImageSpringboot" 
                }
            } 
        }
       stage('Deploy Image') { 
            steps { 
                script { 
                    docker.withRegistry( '', registryCredential ) { 
                        dockerImage.push() 
                    }
                } 
            }
        }

        stage('Docker Compose') {
            steps {
                    sh 'docker compose up -d'
            }
        }


     
  stage('Email Notification') {
            steps {
                script {
                    try {
                        emailext (
                            subject: "Jenkins Job - ${currentBuild.result}",
                            body: "This is the email body.",
                            to: "islemferchichi28@gmail.com",
                        )
                    } catch (Exception e) {
                        currentBuild.result = 'FAILURE'
                        throw e
                    }
                }
            }
        }
    }
post {
        success {
            emailext (
                body: "MALLA JAW, The Jenkins job was successful.\n You can view the build at: ${BUILD_URL}",
                subject: "Jenkins Job - Success",
                to: 'islemferchichi28@gmail.com'
            )
        }
        failure {
            emailext (
                body: "EZZZAH, The Jenkins job failed.\n You can view the build at: ${BUILD_URL}",
                subject: "Jenkins Job - Failure",
                to: 'islemferchichi28@gmail.com'
            )
        }
    }
}


